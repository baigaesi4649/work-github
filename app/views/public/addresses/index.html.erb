<h1>配送先登録/一覧</h1>
<%= form_with model: Address.new , url: public_addresses_path do |f| %>
  郵便番号<%= f.text_field :postal_code %>
  <%= f.text_field :address %>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>
<table class="table">
<tbody>
<tr>
  <th>郵便番号</th>
  <th>住所</th>
  <th>宛名</th>
  <th></th>
</tr>
<% @addresses.each do |address| %>
<tr>
  <td><%= address.postal_code %></td>
  <td><%= address.address %></td>
  <td><%= address.name %></td>
  <td><%= link_to "編集する",edit_public_address_path(address.id),class: "btn btn btn-success btn-sm" %></td>
　<td><%= link_to "削除する",public_address_path(address.id),method: :delete,class: "btn btn-danger btn-sm" %></td>
</tr>
<% end %>
</tbody>
</table>