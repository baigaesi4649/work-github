<%= form_with model: @cart_item, url: public_cart_items_path, method: :post do |f| %>
<%= image_tag @item.get_image %>
<table class="table">
<tbody>
<tr>
 <td>商品名</td>
 <td><%= @item.name %></td>
</tr>
<tr>
 <td>商品説明</td>
 <td><%= @item.introduction %></td>
</tr>
<tr>
 <td>(税込)</td>
 <td><%= @item.price %></td>
 <td><%= @item.is_active %></td>
</tr>
</tbody>
</table>
<%= f.select :amount, *[1..3] %>
<%= f.hidden_field :item_id, :value => @item.id %>
<%= f.submit "カートに入れる", class: "btn btn btn-success btn-sm" %>
<% end %>