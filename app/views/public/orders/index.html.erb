<h1>注文履歴一覧</h1>
<table>
  <thead> 
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
      <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
          <%= '〒' + order.shipping_postal_code %></br>
          <%= order.shipping_address %></br>
          <%= order.shipping_name %>
          </td>
          <td>
          <% order.order_details.each do |order_detail| %>
          <%= order_detail.item.name %></td>
          <% end %>
          <td><%= order.billing_amount %>円</td>
          <td><%= link_to "表示する",public_order_path(order.id),class: "btn btn btn-primary btn-sm" %></td>
      </tr>
  <% end %>
  </tbody>

