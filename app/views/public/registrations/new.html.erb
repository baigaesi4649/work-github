<h3>新規会員登録</h3>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
<table class="table">
  <tr>
  <div class="field">
    <th><%= f.label :name,"名前" %></th>
    <td>(姓)</td>
    <td>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    </td>
    <td>(名)</td>
    <td>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </td>
  </div>
  </tr>
  <tr>
  <div class="field">
    <th><%= f.label :namee_kana,"フリガナ" %></th>
    <td>(セイ)</td>
    <td>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    </td>
    <td>(メイ)</td>
    <td>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </td>
  </div>
  </tr>
  </tr>
  <div class="field">
    <th><%= f.label :email,"メールアドレス" %></th>
    <td></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    <td></td>
  </div>
  </tr>
  <tr>
  <div class="field">
    <th><%= f.label :postal_code,"郵便番号(ハイフンなし)" %></th>
    <td></td>
    <td><%= f.number_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
    <td></td>
  </div>
  </tr>
  <tr>
  <div class="field">
    <th><%= f.label :address,"住所" %></th>
    <td></td>
    <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
    <td></td>
  </div>
  </tr>
  <tr>
  <div class="field">
    <th><%= f.label :telephone_number,"電話番号(ハイフンなし)" %></th>
    <td></td>
    <td><%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
    <td></td>
  </div>
  </tr>
  <tr>
  <div class="field">
    <th><%= f.label :password,"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    </th>
    <td></td>
    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    <td></td>
  </div>
  </tr>
  <tr>
  <div class="field">
   <th><%= f.label :password_confirmation,"パスワード(確認用)" %></th>
   <td></td>
   <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
   <td></td>
  </div>
  </tr>
  </table>
    <div class="text-center">
    <div class="actions">
    <%= f.submit "新規登録", class: "btn btn btn-success btn-sm"%>
    </div> 
    </div>
<% end %>

<h3>既に登録済みの方</h3>

<%= link_to "こちら",new_customer_session_path %>からログインしてください。