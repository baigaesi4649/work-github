<h1>商品詳細</h1>
<table class="table">
<tbody>
<tr>
 <td rowspan="6"><%= image_tag @item.get_image(300,300) %></td>
</tr>
<tr>
 <td>商品名</td>
 <td><%= @item.name %></td>
</tr>
<tr>
 <td>商品説明</td>
 <td><%= @item.introduction %></td>
</tr>
<tr>
 <td>ジャンル</td>
 <td><%= @item.genre.name %></td>
</tr>
<tr>
 <td>税込価格</br>(税抜価格)</td>
 <td><%= @item.price %></td>
</tr>
<tr>
 <td>販売ステータス</td>
  <td>
  <% if @item.is_active == true %>
  販売中
  <% else %>
  販売停止中
  <% end %>
 </td>
</tr>
</tbody>
</table>
<div class="text-center">
<%= link_to "編集する", edit_admin_item_path(@item.id),class: "btn btn btn-success btn-sm" %>
</div>