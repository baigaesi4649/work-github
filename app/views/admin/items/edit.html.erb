<p>商品編集</p>
<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
<table class="table">
 <tbody>
  <tr>
   <td>商品画像</td>
   <td><%= f.file_field :image, accept: "image/*" %></td>
  </tr>
  <tr>
   <td>商品名</td>
   <td><%= f.text_field :name %></td>
  </tr> 
  <tr>
   <td>商品説明</td>
   <td><%= f.text_field :introduction %></td>
  </tr>
  <tr>
   <td>ジャンル</td>
   <td><%= f.collection_select :genre_id, Genre.all, :id,:name,{ include_blank: '選択してください'}, { required: true } %></td>
  </tr>
  <tr>
   <td>税抜価格</td>
   <td><%= f.text_field :price %></td>
  </tr>
  <tr>
   <td>販売ステータス</td>
   <td>
  <%= f.radio_button :is_active, :true %>
  <%= f.label :is_active, "販売中" %>
  <%= f.radio_button :is_active, :false %>
  <%= f.label :is_active, "販売停止中" %>
  </td>
  </tr>
 </tbody>
</table>
  <%= f.submit '変更を保存' %>
<% end %>